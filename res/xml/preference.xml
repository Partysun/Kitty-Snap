<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Игровые настройки">
                
                <CheckBoxPreference
                        android:title="Вкл./Выкл. Звук"
                        android:defaultValue="false"
                        android:summary="This preference can be true or false"
                        android:key="checkboxPref" />
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Отладочные настройки игры">
        <EditTextPreference
                android:name="artifactSpeed"
                android:summary="Введите Float значение скорости."
                android:defaultValue="50f"
                android:title="Скорость падения артефактов"
                android:key="artifactSpeed" />
         <EditTextPreference
                android:name="artifactSpawnTime"
                android:summary="Введите значение времени респа."
                android:defaultValue="5"
                android:title="Частота появления артефактов"
                android:key="artifactSpawnTime" />  
		 <EditTextPreference
                android:name="defaultSpeed"
                android:summary="Введите скорость персонажа"
                android:defaultValue="150"
                android:title="Скорость персонажа"
                android:key="defaultSpeed" />
            </PreferenceCategory>    
           <PreferenceCategory
                android:title="Вероятности появлений артефактов">  
         <EditTextPreference
                android:name="bonusFreq"
                android:summary="Введите вероятность появления бонуса"
                android:defaultValue="50"
                android:title="Частота появления бонуса"
                android:key="bonusFreq" />
         <EditTextPreference
                android:name="enemyFreq"
                android:summary="Введите вероятность появления врага"
                android:defaultValue="30"
                android:title="Частота появления врага"
                android:key="enemyFreq" />
         <EditTextPreference
                android:name="shieldFreq"
                android:summary="Введите вероятность появления 'Щита'"
                android:defaultValue="5"
                android:title="Частота появления щита"
                android:key="shieldFreq" />   
         <EditTextPreference
                android:name="slowFreq"
                android:summary="Введите вероятность появления 'Песочных часов'"
                android:defaultValue="5"
                android:title="Частота появления 'Песочных часов'"
                android:key="slowFreq" />         
         <EditTextPreference
                android:name="speedFreq"
                android:summary="Введите вероятность появления 'Ботинок'"
                android:defaultValue="5"
                android:title="Частота появления 'Ботинок'"
                android:key="speedFreq" />  
         <EditTextPreference
                android:name="romFreq"
                android:summary="Введите вероятность появления 'Рома'"
                android:defaultValue="5"
                android:title="Частота появления 'Рома'"
                android:key="romFreq" />  
                                                     
        </PreferenceCategory>
</PreferenceScreen>
